{
    "name": "olcs/olcs-cpms",
    "description": "CPMS Module",
    "type": "library",
    "license": "proprietary",
    "prefer-stable": true,
    "repositories": [
        {
            "packagist": false
        },
        {
            "url": "http://nexus.shd.ci.nonprod.dvsa.aws/repository/OLCS",
            "type": "composer"
        },
        {
            "url": "http://nexus.shd.ci.nonprod.dvsa.aws/repository/Packagist-Proxy",
            "type": "composer"
        }
    ],
    "require": {
        "elendev/nexus-composer-push": "^0.1",
        "olcs/olcs-devtools": "^4.205",
        "guzzlehttp/guzzle": "^6.3"
    },
    "require-dev": {
        "phpunit/phpunit": "7.*",
        "mockery/mockery": "^1.2",
        "phpstan/phpstan": "^0.11.5"
    },
    "autoload": {
        "psr-4": {
            "Dvsa\\Olcs\\Cpms\\": "src",
            "Dvsa\\Olcs\\Cpms\\Test\\": "test"
        }
    },
    "config": {
        "secure-http": false
    },
    "scripts": {
        "ut": "phpunit test --stop-on-failure",
        "review": "review",
        "cs": "phpcs --severity=1 --standard=vendor/olcs/coding-standards/Profiles/DVSA/CS/ruleset.xml",
        "coverage": "phpunit -c test/phpunit.xml --coverage-html ./test/coverage/html",
        "sonar": "phpunit -c test/phpunit.xml --coverage-clover ./test/coverage/coverage-report.clover --log-junit ./test/coverage/log.junit",
        "update-syms": "composer-update-syms",
        "release": "release",
        "sa": "phpstan analyse --level 7 src test --ansi"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "0.1.x-dev"
        },
        "nexus-push": {
            "url": "http://nexus.shd.ci.nonprod.dvsa.aws/repository/olcs-cpms",
            "ignore": [
                "tests"
            ]
        }
    }
}
